<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="viewStart"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/symbol"
        android:layout_width="60sp"
        android:layout_height="30sp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="12dp"
        android:gravity="left|center"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lowerbound"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lowerbound"
        android:layout_width="70sp"
        android:layout_height="30sp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="1dp"
        android:text="TextView"
        android:textSize="16sp"
        android:gravity="center|center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lower_indicator"
        app:layout_constraintStart_toEndOf="@+id/symbol"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/lower_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/price"
        app:layout_constraintStart_toEndOf="@+id/lowerbound"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_home_watchlist_down_24" />

    <TextView
        android:id="@+id/price"
        android:layout_width="70sp"
        android:layout_height="30sp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:text="TextView"
        android:textSize="16sp"
        android:gravity="center|center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/upper_indicator"
        app:layout_constraintStart_toEndOf="@+id/lower_indicator"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/upper_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/upperbound"
        app:layout_constraintStart_toEndOf="@+id/price"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_home_watchlist_up_24" />

    <TextView
        android:id="@+id/upperbound"
        android:layout_width="70sp"
        android:layout_height="30sp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:textSize="16sp"
        android:gravity="center|center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/upper_indicator"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>